<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Rule"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_rule_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rule Name" />

    <Spinner
        android:id="@+id/spinner_rule_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinner_sim_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinner_usage_metric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/input_extra_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time (HH:MM) or Threshold or SSID"
        android:visibility="visible"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinner_action_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply To:"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_action_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:checked="true"/>
        <CheckBox
            android:id="@+id/cb_action_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice"/>
        <CheckBox
            android:id="@+id/cb_action_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Hotspot Instead"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_save_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Rule"
        android:layout_marginTop="16dp"/>

</LinearLayout>
