<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add eSIM Backup"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_esim_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profile Name (e.g. Travel Sim)" />

    <EditText
        android:id="@+id/input_esim_carrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Carrier Name" />

    <EditText
        android:id="@+id/input_esim_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Activation Code (LPA:1$...)" />

    <Button
        android:id="@+id/btn_save_esim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"/>

</LinearLayout>
